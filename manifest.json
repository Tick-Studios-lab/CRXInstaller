{
  "manifest_version": 2,
  "name": "CRX Installer",
  "version": "1.0",
  "description": "Install CRX files easily.",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "webstore.install"
  ],
  "web_accessible_resources": [
    "index.html"
  ]
}
